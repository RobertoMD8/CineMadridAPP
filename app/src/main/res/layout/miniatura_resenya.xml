<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filaPeliculas"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#610000"
    android:layout_marginTop="10dp"
    android:padding="5dp"
    >


    <!-- PRIMERA PELICULA -->

    <EditText
        android:id="@+id/Reseña"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nota"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:text=""

        android:background="@drawable/boton_iniciar_sesion"
    />

    <RatingBar
        android:id="@+id/nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Reseña"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginTop="5dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>