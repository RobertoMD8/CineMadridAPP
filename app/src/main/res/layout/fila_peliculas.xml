<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/filaPeliculas"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:background="#610000"
    android:layout_marginTop="10dp"
    >


    <!-- PRIMERA PELICULA -->
    <ImageButton
        android:id="@+id/imagenPelicula1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintHeight_percent="0.85"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imagenPelicula2"

        android:layout_marginStart="3dp"
        android:scaleType="centerCrop"
        android:padding="2.5dp"


        android:src="@drawable/poster_mad_max"
        android:background="@drawable/boton_borde_blanco"
        />

    <TextView
        android:id="@+id/notaPelicula1"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/imagenPelicula1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/imagenPelicula1"
        app:layout_constraintEnd_toEndOf="@id/imagenPelicula1"
        app:layout_constraintHeight_percent="0.15"

        android:text="8.1"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="17sp"
        android:fontFamily="@font/nexa_bold"
        />


    <!-- SEGUNDA PELICULA -->
    <ImageButton
        android:id="@+id/imagenPelicula2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintHeight_percent="0.85"

        app:layout_constraintStart_toEndOf="@id/imagenPelicula1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imagenPelicula3"

        android:scaleType="centerCrop"
        android:padding="2.5dp"

        android:src="@drawable/poster_jaws"
        android:background="@drawable/boton_borde_blanco"
        />

    <TextView
        android:id="@+id/notaPelicula2"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/imagenPelicula2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/imagenPelicula2"
        app:layout_constraintEnd_toEndOf="@id/imagenPelicula2"
        app:layout_constraintHeight_percent="0.15"

        android:text="8.3"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="17sp"
        android:fontFamily="@font/nexa_bold"
        />

    <!-- TERCERA PELICULA -->
    <ImageButton
        android:id="@+id/imagenPelicula3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintHeight_percent="0.85"

        app:layout_constraintStart_toEndOf="@id/imagenPelicula2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imagenPelicula4"

        android:scaleType="centerCrop"
        android:padding="2.5dp"

        android:src="@drawable/poster_pulp_fiction"
        android:background="@drawable/boton_borde_blanco"
        />

    <TextView
        android:id="@+id/notaPelicula3"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/imagenPelicula3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/imagenPelicula3"
        app:layout_constraintEnd_toEndOf="@id/imagenPelicula3"
        app:layout_constraintHeight_percent="0.15"

        android:text="8.9"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="17sp"
        android:fontFamily="@font/nexa_bold"
        />


    <!-- CUARTA PELICULA -->
    <ImageButton
        android:id="@+id/imagenPelicula4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintHeight_percent="0.85"

        app:layout_constraintStart_toEndOf="@id/imagenPelicula3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginEnd="3dp"

        android:scaleType="centerCrop"
        android:padding="2.5dp"

        android:src="@drawable/poster_scarface"
        android:background="@drawable/boton_borde_blanco"
        />

    <TextView
        android:id="@+id/notaPelicula4"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/imagenPelicula4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/imagenPelicula4"
        app:layout_constraintEnd_toEndOf="@id/imagenPelicula4"
        app:layout_constraintHeight_percent="0.15"

        android:text="8.4"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="17sp"
        android:fontFamily="@font/nexa_bold"
        />

