<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#610000">

    <ImageButton
        android:id="@+id/btnAtras"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="58dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/button_atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etReseña"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="110dp"
        android:padding="10dp"

        android:background="@drawable/edit_text_buscar_pelicula"
        android:textAlignment="center"
        android:textSize="25sp"
        android:fontFamily="@font/nexa_regular"
        android:text=""

        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.55"
        />

    <TextView
        android:id="@+id/tvNotaString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etReseña"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"

        android:text=""
        android:fontFamily="@font/nexa_regular"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        />

    <RatingBar
        android:id="@+id/nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvNotaString"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"

        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_gravity="center_horizontal"
        android:numStars="10"
        android:stepSize="0.5"
        android:isIndicator="false"
        />

    <Button
        android:id="@+id/btnGuardarReseña"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="70dp"
        android:background="@drawable/boton_iniciar_sesion"
        android:fontFamily="@font/nexa_bold"
        android:text="GUARDAR"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nota"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
