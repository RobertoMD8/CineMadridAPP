<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="match_parent"

    app:layout_constraintWidth_percent="0.2"
    android:layout_marginTop="3dp"
    android:layout_marginStart="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    >

    <!-- PRIMERA PELICULA -->
    <ImageButton
        android:id="@+id/imagenPelicula1"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintHeight_percent="0.85"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:scaleType="centerCrop"
        android:padding="2.5dp"


        android:src="@drawable/poster_mad_max"
        android:background="@drawable/boton_borde_blanco"
        />

    <TextView
        android:id="@+id/notaPelicula1"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/imagenPelicula1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/imagenPelicula1"
        app:layout_constraintEnd_toEndOf="@id/imagenPelicula1"
        app:layout_constraintHeight_percent="0.15"

        android:text="8.1"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>